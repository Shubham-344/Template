<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/pageColor"
        android:gravity="center"
        android:orientation="vertical">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/toolBox"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/toolBox"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/AddTextbtn"
            android:layout_width="150dp"
            android:background="@drawable/add_text_btn"
            android:text="Add New Text"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:backgroundTint="@color/grey"/>
<!--        <Button-->
<!--            android:id="@+id/AddBorderbtn"-->
<!--            android:layout_width="150dp"-->
<!--            android:background="@drawable/add_text_btn"-->
<!--            android:text="Add background"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="visible"-->
<!--            android:backgroundTint="@color/grey"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/allTool"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/edit_text"
           android:id="@+id/editTextBtn"
           android:layout_marginHorizontal="15dp"
           android:visibility="visible"
           />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/font"
            android:id="@+id/fontBtn"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/size"
            android:id="@+id/textSizeBtn"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/font_color"
            android:id="@+id/fontColorBtn"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/move"
            android:id="@+id/moveBtn"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/done"
            android:id="@+id/doneBtn"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/sizeChangeBox"
            android:orientation="horizontal"
            android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/inc_font"
            android:id="@+id/sizeInc"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/decfont"
            android:id="@+id/sizeDec"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/done"
            android:id="@+id/sizechangeDone"
            android:layout_marginHorizontal="15dp"
            android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fontBox"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:text="Abcd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22dp"
                android:fontFamily="@font/lemon"
                android:visibility="visible"
                android:id="@+id/f1"/>
            <TextView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:text="Abcd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22dp"
                android:fontFamily="@font/teko"
                android:visibility="visible"
                android:id="@+id/f2"/>
            <TextView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:text="Abcd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22dp"
                android:fontFamily="@font/bebas"
                android:visibility="visible"
                android:id="@+id/f3"/>
            <TextView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:text="Abcd"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22dp"
                android:fontFamily="@font/abel"
                android:visibility="visible"
                android:id="@+id/f4"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/done"
                android:layout_marginLeft="10dp"
                android:id="@+id/fontChooseDone"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>